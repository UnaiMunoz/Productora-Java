<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.productora.controller.MainController"
            prefHeight="768.0" prefWidth="1024.0">
    <top>
        <VBox spacing="10" style="-fx-background-color: #f4f4f4;">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Gestión de Productora de Series" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
                <Pane HBox.hgrow="ALWAYS" />
                <Button text="Ayuda" onAction="#onAyudaAction"/>
            </HBox>
            <Separator/>
        </VBox>
    </top>
    
    <left>
        <VBox spacing="10" style="-fx-background-color: #e8e8e8;" prefWidth="200">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Menú" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
            <Separator/>
            <Button text="Series" prefWidth="180" onAction="#onSeriesAction"/>
            <Button text="Temporadas" prefWidth="180" onAction="#onTemporadasAction"/>
            <Button text="Episodios" prefWidth="180" onAction="#onEpisodiosAction"/>
            <Button text="Actores" prefWidth="180" onAction="#onActoresAction"/>
            <Button text="Reportes" prefWidth="180" onAction="#onReportesAction"/>
        </VBox>
    </left>
    
    <center>
        <StackPane fx:id="contentPane">
            <VBox alignment="CENTER" spacing="20">
                <padding>
                    <Insets top="50" right="50" bottom="50" left="50"/>
                </padding>
                <Label text="Bienvenido al Sistema de Gestión de Productora" style="-fx-font-size: 22; -fx-font-weight: bold;"/>
                <Label text="Seleccione una opción del menú para comenzar" style="-fx-font-size: 16;"/>
                <ImageView fx:id="logoImageView" fitWidth="300" fitHeight="200" preserveRatio="true"/>
                <HBox alignment="CENTER" spacing="30">
                    <Button text="Gestionar Series" styleClass="big-button" onAction="#onSeriesAction"/>
                    <Button text="Gestionar Actores" styleClass="big-button" onAction="#onActoresAction"/>
                </HBox>
                <Label text="Desarrollado para gestionar efectivamente su productora" style="-fx-font-style: italic;"/>
            </VBox>
        </StackPane>
    </center>
    
    <bottom>
        <HBox alignment="CENTER_RIGHT" style="-fx-background-color: #f4f4f4; -fx-padding: 5;">
            <Label text="© 2025 Gestión de Productora v1.0" />
        </HBox>
    </bottom>
</BorderPane>